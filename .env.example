# Grafana Configuration
# Copy this file to .env for local development/testing

# Your Grafana instance URL (required)
GRAFANA_URL=https://your-grafana-instance.com

# Grafana API key with admin permissions (required)
# Create this in Grafana: Administration → Users and access → Service accounts
GRAFANA_API_KEY=glsa_your_api_key_here

# Grafana organization ID (optional, defaults to 1)
GRAFANA_ORG_ID=1

# Additional settings for local development
NODE_ENV=development
DEBUG=true